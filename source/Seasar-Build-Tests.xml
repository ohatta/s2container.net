<?xml version="1.0" encoding="utf-8" ?>

<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar\bin\net2.0\Release\Seasar.dll" />
    <MyAssemblyResourceFiles Include="$(MSBuildProjectDirectory)\Seasar\bin\net2.0\Release\ja-JP\Seasar.resources.dll" />
    
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar.Dao\bin\net2.0\Release\Seasar.Dao.dll" />
    <MyAssemblyResourceFiles Include="$(MSBuildProjectDirectory)\Seasar.Dao\bin\net2.0\Release\ja-JP\Seasar.Dao.resources.dll" />
    
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar.Dxo\bin\Release\Seasar.Dxo.dll" />
    <MyAssemblyResourceFiles Include="$(MSBuildProjectDirectory)\Seasar.Dxo\bin\Release\ja-JP\Seasar.Dxo.resources.dll" />
    
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar.DynamicProxy\bin\net2.0\Release\Seasar.DynamicProxy.dll" />
    
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar.Quill\bin\Release\Seasar.Quill.dll" />
    <MyAssemblyResourceFiles Include="$(MSBuildProjectDirectory)\Seasar.Quill\bin\Release\ja-JP\Seasar.Quill.resources.dll" />
    
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar.Unit\bin\net2.0\Release\Seasar.Unit.dll" />
    
    <MyAssemblyFiles Include="$(MSBuildProjectDirectory)\Seasar.Windows\bin\net2.0\Release\Seasar.Windows.dll" />
