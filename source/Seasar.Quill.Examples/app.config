<?xml version="1.0" encoding="utf-8" ?>
<configuration>

	<configSections>
		<section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
		<section name="seasar" type="Seasar.Framework.Xml.S2SectionHandler, Seasar" />
    <section name="quill" type="Seasar.Quill.Xml.QuillSectionHandler, Seasar.Quill" />
	</configSections>

	<log4net>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%-5p %d [%t] %m%n" />
			</layout>
		</appender>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="ConsoleAppender" />
		</root>
	</log4net>

  <connectionStrings>
    <remove name="LocalSqlServer"/>
    <add name="provider"
        connectionString=
        "Provider=Microsoft.Jet.OLEDB.4.0;User ID=admin;Data Source=./s2dotnetdemo.mdb"
        providerName="System.Data.OleDb"/>
  </connectionStrings>

	<seasar>
		<assemblys>
			<assembly>Seasar.Dao</assembly>
		</assemblys>
	</seasar>

  <quill>
    <daoSetting>TypicalDaoSetting</daoSetting>
  </quill>
	
</configuration>